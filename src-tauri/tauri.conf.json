{
  "productName": "GTerm",
  "version": "1.0.21",
  "identifier": "com.gterm.terminal",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0",
      "entitlements": null,
      "exceptionDomain": null
    }
  },
  "plugins": {
    "updater": {
      "active": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IEFCNzBCNkE1RERDOEJCNUQKUldSZHU4amRwYlp3cTVhd2I2Sm8xZVN4b1QyQlFnTUdCYllFbVBmSlBJdU1FYzVhUG5NTXlWYXUK",
      "endpoints": [
        "https://github.com/g0shk3/GTerm/releases/latest/download/latest.json"
      ],
      "windows": {
        "installMode": "passive"
      }
    }
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "GTerm",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "decorations": true,
        "transparent": false,
        "skipTaskbar": false,
        "center": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "devtools": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": {
          "allow": ["$APPDATA/**", "$HOME/.ssh/**"],
          "deny": []
        }
      },
      "capabilities": ["main-capability"]
    }
  }
}
