{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "GTerm",
  "version": "1.0.0",
  "identifier": "com.gterm.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:5173",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0",
      "entitlements": null,
      "exceptionDomain": null
    }
  },
  "app": {
    "windows": [
      {
        "title": "GTerm - SSH Terminal",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false,
        "minWidth": 800,
        "minHeight": 600,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["$APPDATA/**", "$HOME/.ssh/**"]
      }
    }
  },
  "plugins": {
    "dialog": {
      "all": true,
      "ask": true,
      "confirm": true,
      "message": true,
      "open": true,
      "save": true
    },
    "store": {
      "default": "hosts.json"
    },
    "shell": {
      "all": false,
      "open": false
    }
  }
}
